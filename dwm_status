testweather() { 
[ "$(stat -c %y "/tmp/weatherreport" 2>/dev/null | cut -d' ' -f1)" != "$(date '+%Y-%m-%d')" ] && ping -q -c 1 1.1.1.1 >/dev/null && curl -s "wttr.in/$location" > "/tmp/weatherreport" && notify-send "ğŸŒ Weather" "New weather forecast for today."

printf "%s" "$(sed '16q;d' "/tmp/weatherreport" | grep -wo "[0-9]*%" | sort -n | sed -e '$!d' | sed -e "s/^/â˜” /g" | tr -d '\n')" && sed '13q;d' "/tmp/weatherreport" | grep -o "m\\(-\\)*[0-9]\\+" | sort -n -t 'm' -k 2n | sed -e 1b -e '$!d' | tr '\n|m' ' ' | awk '{print " â„ï¸",$1 "Â°","ğŸŒ",$2 "Â°"}'
}


print_volume() {
[ "$(pulsemixer --get-mute)" = "1" ] && printf "ï‡¶" && exit
vol=$(pulsemixer --get-volume | awk '{print $1}')
printf "%s%%\\n" "ï€¨ $vol"
}

