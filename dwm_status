print_torrent(){
	transmission-remote -l | grep % |
	sed " # This first sed command is to ensure a desirable order with sort
	s/.*Stopped.*/A/g;
	s/.*Seeding.*/Z/g;
	s/.*100%.*/N/g;
	s/.*Idle.*/B/g;
	s/.*Uploading.*/L/g;
	s/.*%.*/M/g" |
		sort -h | uniq -c | sed " # Now we replace the standin letters with icons.
				s/A/ï€/g;
				s/B/ï„/g;
				s/L/ï¢/g;
				s/M/ï£/g;
				s/N/ï€Œ/g;
				s/Z/ï‚“/g" | awk '{print $2, $1}' | sed -e "s/ $//g"
}

testweather() { 
[ "$(stat -c %y "/home/yorune/.weatherreport" 2>/dev/null | cut -d' ' -f1)" != "$(date '+%Y-%m-%d')" ] && ping -q -c 1 1.1.1.1 >/dev/null && curl -s "wttr.in/$location" > "/home/yorune/.weatherreport" && notify-send "ğŸŒ Weather" "New weather forecast for today."

printf "%s " "$(sed '16q;d' "/home/yorune/.weatherreport" | grep -wo "[0-9]*%" | sort -n | sed -e '$!d' | sed -e "s/^/â˜” /g" | tr -d '\n')" &&  sed '13q;d' "/home/yorune/.weatherreport" | grep -o "m\\(-\\)*[0-9]\\+" | sort -n -t 'm' -k 2n | sed -e 1b -e '$!d' | tr '\n|m' ' ' | awk '{print "â„ï¸",$1 "Â°","ï†…",$2 "Â°"}'

}


print_volume() {
[ "$(pulsemixer --get-mute)" = "1" ] && printf "ï‡¶" && exit
vol=$(pulsemixer --get-volume | awk '{print $1}')
printf "%s%%\\n" "ï€¨ $vol"
}

print_wifi() 
{	
[ "$(cat /sys/class/net/w*/operstate)" = 'down' ] && wifiicon="ğŸ“¡"

[ ! -n "${wifiicon+var}" ] && wifiicon=$(grep "^\s*w" /proc/net/wireless | awk '{ print "ï‡«", int($3 * 100 / 70) "%" }')

printf "%s %s" "$wifiicon" "$(cat /sys/class/net/e*/operstate | sed "s/down/ï€/;s/up/ï•½/")"

}

print_temp(){
	echo -e "ï­ $(sensors | awk '/Core 0/ {print $3}') +$(sudo nvidia-smi -q -d temperature | grep -i "GPU Current" |sed -r 's/GPU Current Temp            ://'| sed -r 's/ C//' |sed -e 's/^[ \t]*//').0Â°C"
}

print_date(){
	echo -e "ï€— $(date +"%d/%m %H:%M")"
}
print_mail(){
	RESULT=$(echo "$(du -a ~/.mailbox/*/inbox/new/* 2>/dev/null | sed -n '$=')$(cat /tmp/imapsyncicon_$USER 2>/dev/null)")
	if [ -z $RESULT ]; then
        	echo "0"
	else
        	echo "$(du -a ~/.mailbox/*/inbox/new/* 2>/dev/null | sed -n '$=')$(cat /tmp/imapsyncicon_$USER 2>/dev/null)"
	fi
}

batLevel() {
	# Find the battery level
	hash acpi || return 0
	onl="$(acpi -V | grep "on-line")"
	charge="$(cat /sys/class/power_supply/BAT*/capacity)"

	# Determine battery glyph by percentage range
	if [[ -z $onl && ${charge} -gt 80 ]]; then
		echo -e "ï‰€ ${charge}%"
	elif [[ -z $onl && ${charge} -le 80 && ${charge} -gt 60 ]]; then
		echo -e "ï‰ ${charge}%"
	elif [[ -z $onl && ${charge} -le 60 && ${charge} -gt 40 ]]; then
		echo -e "ï‰‚ ${charge}%"
	elif [[ -z $onl && ${charge} -le 40 && ${charge} -gt 20 ]]; then
		echo -e "ï‰ƒ ${charge}%"
	elif [[ -z $onl && ${charge} -le 20 ]]; then
		echo -e "ï‰„ ${charge}%"
	# If charging, use animated glyph
	else
		echo -e "ï‡¦"
	fi
}

usageData() {
	read cpu a b c pi rest < /proc/stat
	pt=$((a+b+c+pi))
	sleep 0.1
	read cpu a b c i rest < /proc/stat
	t=$((a+b+c+i))
	cpuUse=$((100*( (t-pt) - (i-pi) ) / (t-pt) ))

	ramUseA=$(free -m -h | grep Mem | awk '{print $3"/"$2}')
	ramPer=$(free -m | grep Mem | awk '{print 100*($3/$2)}')
	ramUseB="${ramPer%.*}"

	echo -e "ï‹› $cpuUse% ï”¸ $ramUseB%"
}


playerCmus(){
cmus=$(cmus-remote -Q | grep status)
case "$cmus" in
"status stop"*)
    echo ""
    ;;
"status paused"*)
    echo "| ïŒ |"
    ;;
'status playing'*)
    echo "| ï‹ |"
    ;;
"")
    echo ""
    ;;
esac
}

while true
do
	#xsetroot -name "$(print_torrent)$(print_temp) | $(usageData) | $(testweather) | $(print_wifi) | $(batLevel) | $(print_volume) | $(print_date)"
	xsetroot -name "$(print_wifi) | $(batLevel) | $(print_volume) | $(print_date)"
	sleep 2 
done
